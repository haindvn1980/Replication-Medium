<%- include('../header.ejs')%>
<!--------------------------------------
HEADER
--------------------------------------->
<div class="container" style="margin-top: 40px;">
  <div class="jumbotron jumbotron-fluid mb-3 pl-0 pt-0 pb-0 bg-white position-relative">
    <div class="h-100 tofront">
      <div class="row">
        <div class="col-md-6 pt-6 pb-6 pr-6 align-self-center">
          <p class="text-uppercase font-weight-bold">
            <a class="text-danger" href="/category"><%=article.caterogyID.categoryName.toUpperCase()%></a>
          </p>
          <h1 class="display-4 secondfont mb-3 font-weight-bold"><%=article.title%></h1>
          <p class="mb-3">
            <%=article.description%>
          </p>
          <div class="d-flex align-items-center" style="width:550px;float: left;">
            <img class="rounded-circle" src="../images/<%=article.author.profile.picture%>" width="60" height="60">
            <p style="width: 40%;">
              <small class="ml-2"><%=article.author.profile.name%> in <%=article.caterogyID.categoryName.toUpperCase()%>
                <br>
                &nbsp;&nbsp;<%= moment(article.createdAt).format( 'MMM-DD-YYYY') %> · <%=article.minRead%> min read
              </small></p>

            <p style="width: 18%;text-align: center;">
              <%
              if(flagFollowing===false && flagCurrentUser===false) 
              {
               
                %>
              <a class="button button--small button--upsellNav button--withChrome u-baseColor--buttonNormal u-xs-hide js-upgradeMembershipAction"
                href="/follow/<%=article._id%>" data-disable-client-nav="true" data-scroll="native">Follow</a>
              <%  
              }else{ 
                if( flagCurrentUser===true){
              %>
              <a style="margin-top: 5px;"
                class="button button--small button--upsellNav button--withChrome u-baseColor--buttonNormal u-xs-hide js-upgradeMembershipAction"
                href="#" data-disable-client-nav="true" data-scroll="native">It's me</a>
              <%}else{%>
              <a style="margin-top: 5px;"
                class="button button--small button--upsellNav button--withChrome u-baseColor--buttonNormal u-xs-hide js-upgradeMembershipAction"
                href="#" data-disable-client-nav="true" data-scroll="native">Followed</a>
              <%
              }}
              %>
            </p>
            <p style="width:7%;text-align: center;">
              <%
              if(flagbookmark===false){
              %>
              <a class="button button--small button--chromeless is-inSiteNavBar u-baseColor--buttonNormal button--withIcon button--withSvgIcon button--chromeless u-xs-hide"
                href="/bookmark/<%=article._id%>" title="Bookmarks" aria-label="Bookmarks">
                <span class="button-defaultState"><span class="svgIcon svgIcon--bookmarkStack svgIcon--25px">
                    <svg class="svgIcon-use" width="35" line-height="25">
                      <path
                        d="M16 6c1.1 0 2 .9 2 2v13.661h-.012a.5.5 0 0 1-.118.285.508.508 0 0 1-.708.03L11.5 17.85l-5.662 4.125a.5.5 0 0 1-.706-.03.478.478 0 0 1-.12-.285H5V8c0-1.1.9-2 2-2h9zM6 8v12.636l5.162-3.667a.49.49 0 0 1 .676 0L17 20.637V8c0-.55-.45-1-1-1H7c-.55 0-1 .45-1 1z">
                      </path>
                      <path
                        d="M21 5v13.661h-.012a.5.5 0 0 1-.118.285.508.508 0 0 1-.708.03L20 18.858V5c0-.55-.45-1-1-1h-9c-.55 0-1 .45-1 1H8c0-1.1.9-2 2-2h9c1.1 0 2 .9 2 2z">
                      </path>
                    </svg>
                  </span>
                </span>
              </a>
              <%}else{%>
              <a class="button button--small button--chromeless is-inSiteNavBar u-baseColor--buttonNormal button--withIcon button--withSvgIcon button--chromeless u-xs-hide"
                href="/removebookmark/<%=article._id%>" title="Bookmarks" aria-label="Bookmarks">
                <span class="button-defaultState"><span class="svgIcon svgIcon--bookmarkStack svgIcon--25px">
                    <svg class="svgIcon-use" width="35" line-height="25">
                      <path
                        d="M19 6a2 2 0 0 0-2-2H8a2 2 0 0 0-2 2v14.66h.01c.01.1.05.2.12.28a.5.5 0 0 0 .7.03l5.67-4.12 5.66 4.13c.2.18.52.17.71-.03a.5.5 0 0 0 .12-.29H19V6z">
                      </path>
                      <path
                        d="M21 5v13.661h-.012a.5.5 0 0 1-.118.285.508.508 0 0 1-.708.03L20 18.858V5c0-.55-.45-1-1-1h-9c-.55 0-1 .45-1 1H8c0-1.1.9-2 2-2h9c1.1 0 2 .9 2 2z">
                      </path>
                    </svg>
                  </span>
                </span>
              </a>
              <%}%>
            </p>

            <p style="width: 6%;text-align: center;">
              <a class="button button--small button--chromeless is-inSiteNavBar u-baseColor--buttonNormal button--withIcon button--withSvgIcon button--chromeless u-xs-hide"
                href="/favorite/<%=article._id%>" title="favorite" aria-label="favorite">
              <span class="button-defaultState">
                <span class="svgIcon svgIcon--bookmarkStack svgIcon--25px">
                  <svg width="35" line-height="25px">
                    <path
                      d="M13.74 1l.76 2.97.76-2.97zM16.82 4.78l1.84-2.56-1.43-.47zM10.38 2.22l1.84 2.56-.41-3.03zM22.38 22.62a5.11 5.11 0 0 1-3.16 1.61l.49-.45c2.88-2.89 3.45-5.98 1.69-9.21l-1.1-1.94-.96-2.02c-.31-.67-.23-1.18.25-1.55a.84.84 0 0 1 .66-.16c.34.05.66.28.88.6l2.85 5.02c1.18 1.97 1.38 5.12-1.6 8.1M9.1 22.1l-5.02-5.02a1 1 0 0 1 .7-1.7 1 1 0 0 1 .72.3l2.6 2.6a.44.44 0 0 0 .63-.62L6.1 15.04l-1.75-1.75a1 1 0 1 1 1.41-1.41l4.15 4.15a.44.44 0 0 0 .63 0 .44.44 0 0 0 0-.62L6.4 11.26l-1.18-1.18a1 1 0 0 1 0-1.4 1.02 1.02 0 0 1 1.41 0l1.18 1.16L11.96 14a.44.44 0 0 0 .62 0 .44.44 0 0 0 0-.63L8.43 9.22a.99.99 0 0 1-.3-.7.99.99 0 0 1 .3-.7 1 1 0 0 1 1.41 0l7 6.98a.44.44 0 0 0 .7-.5l-1.35-2.85c-.31-.68-.23-1.19.25-1.56a.85.85 0 0 1 .66-.16c.34.06.66.28.88.6L20.63 15c1.57 2.88 1.07 5.54-1.55 8.16a5.62 5.62 0 0 1-5.06 1.65 9.35 9.35 0 0 1-4.93-2.72zM13 6.98l2.56 2.56c-.5.6-.56 1.41-.15 2.28l.26.56-4.25-4.25a.98.98 0 0 1-.12-.45 1 1 0 0 1 .29-.7 1.02 1.02 0 0 1 1.41 0zm8.89 2.06c-.38-.56-.9-.92-1.49-1.01a1.74 1.74 0 0 0-1.34.33c-.38.29-.61.65-.71 1.06a2.1 2.1 0 0 0-1.1-.56 1.78 1.78 0 0 0-.99.13l-2.64-2.64a1.88 1.88 0 0 0-2.65 0 1.86 1.86 0 0 0-.48.85 1.89 1.89 0 0 0-2.67-.01 1.87 1.87 0 0 0-.5.9c-.76-.75-2-.75-2.7-.04a1.88 1.88 0 0 0 0 2.66c-.3.12-.61.29-.87.55a1.88 1.88 0 0 0 0 2.66l.62.62a1.88 1.88 0 0 0-.9 3.16l5.01 5.02c1.6 1.6 3.52 2.64 5.4 2.96a7.16 7.16 0 0 0 1.18.1c1.03 0 2-.25 2.9-.7A5.9 5.9 0 0 0 23 23.24c3.34-3.34 3.08-6.93 1.74-9.17l-2.87-5.04z">
                    </path>
                  </svg>
                </span>
              </span>
              </a>
            </p>
            <p style="width: 15%; height: 100%; vertical-align: middle;margin-top: 10px; ">
              <a href="#" title="sum favorite">
                <span style="font-size: 15px;font-family: Arial, Helvetica, sans-serif;font-weight: bold;">
                  &nbsp;&nbsp;<%=article.favoritesCount%> claps
                </span>
              </a>
            </p>
          </div>
        </div>
        <div class="col-md-6 pr-0" style="margin-top: 40px;">
          <img src="../images/<%=article.mainImage%>">
        </div>
      </div>
    </div>
  </div>
</div>
<!-- End Header -->

<!--------------------------------------
MAIN
--------------------------------------->
<div class=" container pt-4 pb-4">
  <div class="row justify-content-center">
    <div class="col-lg-2 pr-4 mb-4 col-md-12">
      <div class="sticky-top text-center">
        <div class="text-muted">
          Share this
        </div>
        <div class="share d-inline-block">

          <div class="a2a_kit a2a_kit_size_32 a2a_default_style">
            <a class="a2a_dd" href="/"></a>
            <a class="a2a_button_facebook"></a>
            <a class="a2a_button_twitter"></a>
          </div>
          <script async src=" https://static.addtoany.com/menu/page.js">
          </script>
        </div>
      </div>
    </div>
    <div class="col-md-12 col-lg-10">
      <article class="article-post">
        <%-article.bodyArticle%>
      </article>
      <div class="p-5">
        <ul class="nav md-pills pills-grey" style="margin-left: -48px;">
          <%
          if (typeof article.tagList !== 'undefined')  
            {
              article.tagList.forEach(function(tag) { 
          %>
          <li class="nav-item">
            <a class="nav-link active show" href="/tags/<%=tag%>" role="tab"><%=tag%></a>
          </li>&nbsp;&nbsp;
          <%
              })
          }
            %>
        </ul>
      </div>
      <div class="border p-5 bg-lightblue" style="margin-top:10px">
        <form class="card comment-form" method="POST" action="/comment/<%=article._id%>">
          <div class="card-block">
            <textarea name="comment" class="form-control" maxlength="1500" placeholder="Write a comment..." rows="4"
              style="margin-top: 0px; margin-bottom: 0px; height: 150px;" required></textarea></div>
          <div class="card-footer">
            <img src="../images/<%=user.profile.picture%>"
              class="avatar-image u-size50x50 u-xs-size40x40 comment-author-img"
              alt="Nguyễn Đức Hải">&nbsp;&nbsp;<%=locals.user.profile.name%>
            <button type="submit" class="btn btn-sm btn-primary" type="submit">Post Comment</button></div>
        </form>
      </div>
      <%
        comments.forEach(function(comment) { 
      %>
      <div class="card" style="margin-top: 8px;">
        <div class="card-block">
          <p class="card-text"><%-comment.body%></p>
        </div>
        <div class="card-footer"><a class="comment-author" href="#@haindvn"><img
              src="../images/<%=comment.author.profile.picture%>" class="comment-author-img"></a>
          &nbsp;
          <a class="comment-author" href="#"><%=comment.author.profile.name%></a><span
            class="date-posted">&nbsp;&nbsp;<%= moment(comment.createdAt).format( 'MMM-DD-YYYY') %></span><span
            class="mod-options"><i class="ion-trash-a"></i></span></div>
      </div>
      <%})%>
      <div class="border p-5 bg-lightblue" style="margin-top:10px">
        <div class="row justify-content-between">
          <div class="col-md-5 mb-2 mb-md-0">
            <h5 class="font-weight-bold secondfont">Become a member</h5>
            Get the latest news right in your inbox. We never spam!
          </div>
          <div class="col-md-7">
            <div class="row">
              <div class="col-md-12">
                <input type="text" class="form-control" placeholder="Enter your e-mail address">
              </div>
              <div class="col-md-12 mt-2">
                <button type="submit" class="btn btn-success btn-block">Subscribe</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container pt-4 pb-4">
  <h5 class="font-weight-bold spanborder"><span>Read next</span></h5>
  <div class="row">
    <div class="col-lg-6">
      <div class="card border-0 mb-4 box-shadow h-xl-300">
        <%
        if (typeof articleNext[0] !== 'undefined') {
        %>
        <div style="background-image: url(../images/<%=articleNext[0].mainImage%>); height: 150px; background-size: cover;
      background-repeat: no-repeat;">
        </div>
        <div class="card-body px-0 pb-0 d-flex flex-column align-items-start">
          <h2 class="h4 font-weight-bold">
            <a class="text-dark" href="/article/<%=articleNext[0]._id%>"><%=articleNext[0].title%></a>
          </h2>
          <p class="card-text">
            <%=articleNext[0].description%>
          </p>
          <div>
            <small class="d-block"><a class="text-muted" href="/author"><%=articleNext[0].author.profile.name%> in
                <%=articleNext[0].caterogyID.categoryName.toUpperCase()%></a>
              &nbsp;&nbsp;<%= moment(articleNext[0].createdAt).format( 'MMM-DD-YYYY') %>&nbsp;
              &nbsp;<%=articleNext[0].minRead%> min read</small>
          </div>
        </div>
        <%}%>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="flex-md-row mb-4 box-shadow h-xl-300">
        <%
        var i=0;
        articleNext.forEach(function(article) { 
          if(i>0){
        %>
        <div class="mb-3 d-flex align-items-center">
          <img height="80" width="120" src="../images/<%=article.mainImage%>">
          <div class="pl-3">
            <h2 class="mb-2 h6 font-weight-bold">
              <a class="text-dark" href="/article/<%=article._id%>"><%=article.title%></a>
            </h2>
            <div class="card-text text-muted small">
              <%=article.author.profile.name%> in <%=article.caterogyID.categoryName.toUpperCase()%>
            </div>
            <small class="text-muted"><%= moment(article.createdAt).format( 'MMM-DD-YYYY') %> · <%=article.minRead%> min
              read</small>
          </div>
        </div>
        <% } i++; } )%>
      </div>
    </div>
  </div>
</div>
<!-- End Main -->

<!--------------------------------------
FOOTER
--------------------------------------->
<%- include('../footer.ejs')%>