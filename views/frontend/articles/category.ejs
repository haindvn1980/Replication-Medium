<%- include('../header.ejs')%>
<!--------------------------------------
HEADER
--------------------------------------->
<div class="container" style="margin-top: 100px;">

  <div class="container mt-5 mb-5">
    <div class="row">
      <div class="col-md-8">
        <h5 class="font-weight-bold spanborder"><span>Featured in
            <%=articles[0].caterogyID.categoryName.toUpperCase()%></span></h5>
        <div class="card border-0 mb-5 box-shadow">
          <div
            style="background-image: url(../images/<%=favoritesTopFive[0].mainImage%>); height: 350px; background-size: cover; background-repeat: no-repeat;">
          </div>
          <div class="card-body px-0 pb-0 d-flex flex-column align-items-start">
            <h2 class="h2 font-weight-bold">
              <a class="text-dark" href="/article/<%=favoritesTopFive[0]._id%>"><%=favoritesTopFive[0].title%></a>
            </h2>
            <p class="card-text">
              <%=favoritesTopFive[0].description%>
            </p>
            <div>
              <small class="d-block"><a class="text-muted"
                  href="/author/<%=favoritesTopFive[0].author._id%>"><%=favoritesTopFive[0].author.profile.name%></a> 路
                <%= moment(favoritesTopFive[0].createdAt).format( 'MMM-DD-YYYY') %> 路 <%=favoritesTopFive[0].minRead%>
                min read</small>
            </div>
          </div>
        </div>
        <h5 class="font-weight-bold spanborder"><span>Latest</span></h5>
        <div id="container">

          <%
          articles.forEach(function(article) { 
         %>

          <div class="mb-3 d-flex justify-content-between ">
            <div class="col-md-8">
              <h2 class="mb-1 h4 font-weight-bold">
                <a class="text-dark" href="/article/<%=article._id%>"><%=article.title%></a>
              </h2>
              <p>
                There are more coral species lurking in the deep ocean that previously thought.
              </p>
              <div class="card-text text-muted small">
                <a class="text-muted" href="/author/<%=article.author._id%>">
                  <%=article.author.profile.name%></a> in <%=article.caterogyID.categoryName.toUpperCase()%> 路
                <%= moment(article.createdAt).format( 'MMM-DD-YYYY') %> 路 <%=article.minRead%> min
                read
              </div>
            </div>
            <img height="120" width="180" src="../images/<%=article.mainImage%>">
          </div>
          <div style="margin-left: 15px;">
            <hr>
          </div>
          <%  } )%>
        </div>
      </div>
      <div class="col-md-4 pl-4">
        <div class="sticky-top">
          <h5 class="font-weight-bold spanborder"><span>Popular in
              <%=articles[0].caterogyID.categoryName.toUpperCase()%></span></h5>
          <ol class="list-featured">

            <%
            let i=0;
            favoritesTopFive.forEach(function(article) { 
              if(i>0){
            %>
            <li>
              <span>
                <h6 class="font-weight-bold">
                  <a href="/article/<%=article._id%>" class="text-dark"><%=article.title%></a>
                </h6>
                <a class="text-muted" href="/author/<%=article.author._id%>">
                  <%=article.author.profile.name%> </a> in <%=article.caterogyID.categoryName%>
              </span>
            </li>
            <% } i++; } )%>
          </ol>
        </div>
      </div>
    </div>
  </div>
  <div class="container pt-4 pb-4">
    <div class="border p-5 bg-lightblue">
      <div class="row justify-content-between">
        <div class="col-md-6">
          <h5 class="font-weight-bold secondfont">Become a member</h5>
          Get the latest news right in your inbox. It's free and you can unsubscribe at any time. We hate spam as much
          as we do, so we never spam!
        </div>
        <div class="col-md-6">
          <div class="row">
            <div class="col-md-12">
              <input type="email" class="form-control" placeholder="Enter your e-mail address">
            </div>
            <div class="col-md-12 mt-3">
              <button type="submit" class="btn btn-success btn-block">Subscribe</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- End Main -->
</div>

<script>



</script>
